<h2> New Movie </h2>

<form action="/movies/create" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="" placeholder="Title of the movie" />
    <label for="genre">Genre:</label>
    <input type="text" name="genre" id="genre" value="" placeholder="Movie genre" />
    <label name="plot">Plot:</label>
    <input type="text" name="plot" id="plot" value="" placeholder="Movie plot" />
    <label name="cast">Cast:</label>
    <select name="cast" id="cast" multiple>
        {{#each allTheCelebrities}}
        <option value="">{{this.name}}</option>
        {{/each}}
    </select>

    <br><button type="submit">Create a new movie!</button>
</form>